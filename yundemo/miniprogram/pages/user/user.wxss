/* pages/user/user.wxss */
.header{
  background: #f9f9f9f9;
  padding-bottom: 10rpx;
}

.header .userinfo-group{
  overflow: hidden;
}

.userinfo-group .tx-img{
  width: 100rpx;
  height: 100rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  float: left; 
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-group .user-name{
  font-size: 38rpx;
  float: left;
  margin-left: 60rpx;
  margin-top: 60rpx;
}


.userinfo-group .tc-btn{
  width: 100rpx;
  height: 50rpx;
  font-size: 20rpx;
  float: right;
  margin-top: 120rpx; 
  line-height: 50rpx;
  margin-bottom: 18rpx;
}

.dl-btn{
  margin-top: 300rpx;
  margin-bottom: 300rpx;
  width: 440rpx;
  height: 80rpx;
  font-size: 40rpx; 
  line-height: 80rpx;
  color: #e3e3e3;
}

.header .collection-group{
  display: flex;
  justify-content: space-evenly;
  text-align: center;
  border-top: 2rpx solid #e2e2e2;
  padding-top: 18rpx;
}

.collection-group .order{
  font-size: 30rpx;
  background: #a9dafb;
  padding: 4rpx 8rpx;
  border-radius: 8%;
  color: white;
}

.collection-group .coll{
  font-size: 30rpx;
  background: #ef8a72;
  padding: 4rpx 8rpx;
  border-radius: 8%;
  color: white;
}

.collection-group .dd-img{
  width: 60rpx;
  height: 60rpx;
  margin-top: 14rpx;
}

.collection-group .sc-img{
  width: 60rpx;
  height: 50rpx;
  margin-top: 14rpx;
}

.task{
  margin-top: 30rpx;
  background: #f9f9f9f9;
  padding: 10rpx;
  overflow: hidden;
}

.task2{
  background: #f9f9f9f9;
  padding: 10rpx;
  overflow: hidden;
  border-top: 1rpx solid #e2e2e2;
}

.task .task-text{
  margin-left: 80rpx;
  font-size: 34rpx;
  float: left;
}

.task .kh-img{
  width: 34rpx;
  height: 34rpx;
  float: right;
  margin-right: 40rpx;
  margin-top: 8rpx;
}

